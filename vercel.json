{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "ia-performance-web",
  "alias": ["ia-performance", "ia-analysis"],
  "public": true,
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true,
    "silent": false
  },
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "script.js", 
      "use": "@vercel/static"
    },
    {
      "src": "images/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "s-maxage=31536000, stale-while-revalidate"
      }
    },
    {
      "src": "/",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "s-maxage=86400, stale-while-revalidate"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": ".*",
      "dest": "/index.html",
      "status": 404
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/home",
      "destination": "/"
    },
    {
      "source": "/performance",
      "destination": "/#performance"
    },
    {
      "source": "/recommendations",
      "destination": "/#recommendations"
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "env": {
    "NODE_ENV": "production",
    "SITE_NAME": "IA Performance Analysis",
    "SITE_URL": "https://ia-performance-web.vercel.app"
  },
  "regions": [
    "iad1",
    "sfo1",
    "cdg1"
  ],
  "functions": {
    "app/api/**/*.js": {
      "runtime": "@vercel/node@2"
    }
  },
  "crons": [],
  "framework": null,
  "installCommand": "echo 'No install needed for static site'",
  "buildCommand": "echo 'No build needed for static site'",
  "devCommand": "python -m http.server 3000",
  "outputDirectory": ".",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- *.html *.css *.js images/",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": false
    }
  }
}